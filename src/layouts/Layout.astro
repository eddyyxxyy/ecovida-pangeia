---
import { Schema } from "astro-seo-schema";
import "aos/dist/aos.css";

import "../styles/fonts.css";

import Footer from "@components/Footer.astro";

interface Props {
  pageTitle: string;
  pageDescription: string;
  canonicalUrl: URL;
  preloadImages?: string[];
}

const { pageTitle, pageDescription, canonicalUrl, preloadImages } = Astro.props;
---

<html lang="pt-br">
  <head>
    <meta charset="utf-8" />
    {
      preloadImages &&
        preloadImages.map((imageSrc) => (
          <link rel="preload" as="image" href={imageSrc} />
        ))
    }
    <link
      rel="preload"
      as="font"
      href="/fonts/Montserrat-Black.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Montserrat-Bold.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Montserrat-Medium.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Montserrat-Regular.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Montserrat-SemiBold.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Roboto-Black.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Roboto-Medium.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      as="font"
      href="/fonts/Roboto-Regular.woff"
      type="font/woff"
      crossorigin="anonymous"
    />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle}</title>
    <Schema
      item={{
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "Clube da Transição",
        url: "https://ecovidapangeia.com/",
        logo: "https://ecovidapangeia.com/logo-pangeia.webp",
        sameAs: ["https://www.instagram.com/ecovidapangeia/"],
        description:
          "Junte-se ao Clube da Transição para " +
          "autoconhecimento, sustentabilidade e práticas regenerativas. " +
          "Seja um cofundador e contribua para um futuro mais consciente.",
      }}
    />
    <script>
      import AOS from "aos";

      AOS.init();
    </script>
  </head>
  <body class="font-roboto">
    <div
      class="min-h-[100dvh] max-w-[100dvw] overflow-hidden grid grid-rows-[1fr_auto]"
    >
      <slot name="main" />
      <Footer />
    </div>
  </body>
</html>
