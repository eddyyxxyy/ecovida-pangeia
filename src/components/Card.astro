---
interface Props {
  bgImageFileName: string;
  content: string;
  heading: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
  variant?: "bg-brand-orange" | "bg-brand-green" | "bg-brand-mud" | "bg-white";
}

const {
  bgImageFileName,
  content,
  heading: Heading,
  variant = "bg-white",
} = Astro.props;
---

<div
  class="w-60 h-28 rounded-lg bg-center bg-cover bg-no-repeat"
  style={`background-image: url("${bgImageFileName}");`}
>
  <div
    class={`flex items-center justify-center h-full rounded-[inherit] py-6 px-14 tracking-wider font-semibold text-white text-xl text-center ${variant} bg-opacity-75`}
  >
    <Heading>{content}</Heading>
  </div>
</div>
